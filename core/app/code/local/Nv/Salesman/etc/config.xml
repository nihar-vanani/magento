<?xml version="1.0"?>
<config>
    <modules>
        <Nv_Salesman>
            <version>0.1.1</version>
        </Nv_Salesman>
    </modules>  
    <admin>
        <routers>
            <salesman>
                <use>admin</use>
                <args>
                    <module>Nv_Salesman</module>
                    <frontName>salesman</frontName>
                </args>
            </salesman>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <salesman translate="title" module="salesman">
                <title>salesman</title>
                <sort_order>80</sort_order>               
                <children>
                    <manage translate="title" module="salesman">
                        <title>childs</title>
                        <sort_order>0</sort_order>
                        <action>salesman/adminhtml_salesman</action>
                    </manage>
                </children>
            </salesman>
        </menu> 
        <layout>
            <updates>
                <salesman>
                    <file>salesman.xml</file>
                </salesman>
            </updates>
        </layout>       
    </adminhtml> 
