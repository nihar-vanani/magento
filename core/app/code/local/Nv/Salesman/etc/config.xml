    <global>    
        <blocks>
            <salesman>
                <class>Nv_Salesman_Block</class>
            </salesman>
        </blocks>       
        <models>
            <salesman>
                <class>Nv_Salesman_Model</class>
                <resourceModel>salesman_resource</resourceModel>
            </salesman>
            <salesman_resource>
                <class>Nv_Salesman_Model_Resource</class>
                <entities>
                    <salesman>
                        <table>salesman</table>
                    </salesman>  
                </entities>
            </salesman_resource>
        </models>       
        <resources>
            <salesman_setup>
                <setup>
                    <module>Nv_Salesman</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </salesman_setup>
            <salesman_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </salesman_write>
            <salesman_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </salesman_read>
        </resources>    
        <helpers>
            <salesman>
                <class>Nv_Salesman_Helper</class>
            </salesman>
        </helpers>      
    </global>
