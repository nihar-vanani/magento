<?xml version="1.0"?>
<config>
	<modules>
		<Nv_Vendor>
			<version>0.0.3</version>
		</Nv_Vendor>
	</modules>
	<admin>
		<routers>
			<vendor>
				<use>admin</use>
				<args>
					<module>Nv_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
	</admin>
	<adminhtml>
		<menu>
			<vendor translate="title" module="vendor">
				<title>vendor</title>
				<sort_order>80</sort_order>
				<children>
					<manage translate="title" module="vendor">
						<title>Manage Vendor</title>
						<sort_order>0</sort_order>
						<action>vendor/adminhtml_vendor</action>
					</manage>
					<vendor_attribute>
					<title>Attribute</title>
					<sort_order>100</sort_order>
					<children>
						<vendor_attribute>
							<title>Manage Attribute</title>
							<sort_order>100</sort_order>
							<action>vendor/adminhtml_vendor_attribute</action>
						</vendor_attribute>
						<vendor_set>
							<title>Manage Attribute Set</title>
							<sort_order>100</sort_order>
							<action>vendor/adminhtml_vendor_set</action>
						</vendor_set>
					</children>
				</vendor_attribute>
				</children>
			</vendor>
		</menu>
		<layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>  
	</adminhtml>
	<global>
		<blocks>
			<vendor>
				<class>Nv_Vendor_Block</class>
			</vendor>
		</blocks>
		<models>
			<vendor>
				<class>Nv_Vendor_Model</class>
				<resourceModel>vendor_resource</resourceModel>
			</vendor>
			<vendor_resource>
				<class>Nv_Vendor_Model_Resource</class>
				<entities>
					<vendor>
						<table>vendor</table>
					</vendor>
					<vendor_decimal>
						<table>vendor_decimal</table>
					</vendor_decimal>
					<vendor_datetime>
						<table>vendor_datetime</table>
					</vendor_datetime>
					<vendor_int>
						<table>vendor_int</table>
					</vendor_int>
					<vendor_varchar>
						<table>vendor_varchar</table>
					</vendor_varchar>
					<vendor_text>
						<table>vendor_text</table>
					</vendor_text>
					<vendor_char>
						<table>vendor_char</table>
					</vendor_char>
					<eav_attribute>
						<table>vendor_eav_attribute</table>
					</eav_attribute>
				</entities>
			</vendor_resource>
		</models>
		<resources>
			<vendor_setup>
				<setup>
					<module>Nv_Vendor</module>
					<class>Nv_Vendor_Model_Resource_Setup</class>
				</setup>
			</vendor_setup>
		</resources>
		<helpers>
			<vendor>
				<class>Nv_Vendor_Helper</class>
			</vendor>
		</helpers>
	</global>
</config>