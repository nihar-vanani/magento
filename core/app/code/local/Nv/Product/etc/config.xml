    <global>    
        <blocks>
            <product>
                <class>Nv_Product_Block</class>
            </product>
        </blocks>       
        <models>
            <product>
                <class>Nv_Product_Model</class>
                <resourceModel>product_resource</resourceModel>
            </product>
            <product_resource>
                <class>Nv_Product_Model_Resource</class>
                <entities>
                    <product>
                        <table>product</table>
                    </product>  
                </entities>
            </product_resource>
        </models>       
        <resources>
            <product_setup>
                <setup>
                    <module>Nv_Product</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </product_setup>
            <product_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </product_write>
            <product_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </product_read>
        </resources>    
        <helpers>
            <product>
                <class>Nv_Product_Helper</class>
            </product>
        </helpers>      
    </global>
</config>
